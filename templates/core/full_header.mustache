{{!
    @template theme_intuitable/core/full_header

    This template renders the header.

    Example context (json):
    {
        "contextheader": "context_header_html",
        "settingsmenu": "settings_html",
        "hasnavbar": false,
        "navbar": "navbar_if_available",
        "courseheader": "course_header_html",
        "isadmin": false,
        "showpagetitle": false,
        "showpageheaderlogo": false,
        "showbreadcrumb": true,

    }
}}
<header id="page-header" class="row">
    <div class="col-12">
        <div>
            {{#showpagetitle}}
            {{#contextheader }}
            {{{contextheader}}}
            {{/contextheader}}
            {{/showpagetitle}}

            <div class="header-actions-container flex-shrink-0" data-region="header-actions-container">
                {{#headeractions}}
                    <div class="header-action ml-2">{{{.}}}</div>
                {{/headeractions}}
            </div>
            <div class="d-flex flex-wrap">
                {{#hasnavbar}}
                {{#showbreadcrumb}}
                <div id="page-navbar" class="mr-auto">
                    {{{navbar}}}
                </div>
                {{/showbreadcrumb}}
                {{/hasnavbar}}
                {{#settingsmenu}}
                <div class="context-header-settings-menu">
                    {{{settingsmenu}}}
                </div>
                {{/settingsmenu}}
                <div class="d-flex">
                    {{{pageheadingbutton}}}
                </div>
                <div id="course-header">
                    {{{courseheader}}}
                </div>
            </div>
        </div>
    </div>
</header>
